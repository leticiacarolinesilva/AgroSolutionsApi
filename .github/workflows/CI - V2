name: CI - AgroSolutions

# Roda em todo commit na master
on:
  push:
    branches: [ main ]
  workflow_dispatch: # Permite que você clique num botão para rodar manualmente

jobs:
  build-and-test:
    name: Build e Testes
    runs-on: ubuntu-latest

    steps:
    - name: Checkout do código
      uses: actions/checkout@v4

    - name: Setup do .NET
      uses: actions/setup-dotnet@v4
      with:
        dotnet-version: '8.0.x'

    - name: Restaurar pacotes
      # O .NET vai procurar o arquivo .sln automaticamente na raiz
      run: dotnet restore

    - name: Buildar solução
      run: dotnet build --no-restore --configuration Release

    - name: Rodar testes
      # Executa todos os projetos de teste da solução
      run: dotnet test --no-build --configuration Release --logger "trx"
